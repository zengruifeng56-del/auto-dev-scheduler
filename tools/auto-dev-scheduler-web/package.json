{
  "name": "auto-dev-scheduler",
  "private": true,
  "version": "1.0.0",
  "description": "Auto-Dev Scheduler - Electron Desktop Application",
  "author": "Auto-Dev Scheduler Contributors",
  "main": "dist/main/index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "typecheck": "vue-tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "echarts": "^6.0.0",
    "element-plus": "^2.5.0",
    "pinia": "^2.1.0",
    "tree-kill": "^1.2.2",
    "vue": "^3.4.0",
    "vue-echarts": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.0.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "esbuild": "^0.27.1",
    "sass": "^1.70.0",
    "typescript": "^5.6.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^2.1.0",
    "vue-tsc": "^2.1.0"
  },
  "build": {
    "appId": "com.autodev.scheduler",
    "productName": "Auto-Dev Scheduler",
    "artifactName": "Auto-Dev-Scheduler-Setup-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "resources/**/*",
      "!**/*.map"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
